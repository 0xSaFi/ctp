<cg_molecule> <!-- this file is used to convert an atomistic to coarse-grained trajectory -->
	<name>A</name> <!-- name of the CG molecule -->
	<ident>Protein</ident> <!-- name of the atomistic molecule -->
	<topology>
 		<cg_beads>
			<cg_bead>
				<name>NIT1</name> <!-- name of the first CG bead -->
				<type>DCV2T</type> <!-- type of the bead -->
				<mapping>NIT</mapping> <!-- mapping to determine the bead center -->
				<beads> <!-- list of atoms resnum:resname:atomname -->
				1:NIT:N1 1:NIT:CN1 1:NIT:N2 1:NIT:CN2 1:NIT:CC1 1:NIT:C1 1:NIT:HN1
				</beads>
				<symmetry>3</symmetry> <!-- gyration is used for orientation -->
			<qm>
				<crgunitname>DCV2T</crgunitname> <!-- type of the conjugated seg -->
				<position>1</position> <!-- position in the conjugated segment -->
			</qm>
			</cg_bead>
			<cg_bead>
                                <name>THI2</name> <!-- name of the second CG bead -->
				<type>DCV2T</type>
                                <mapping>THI</mapping>
                                <beads>
				2:THI:S1 2:THI:CA1 2:THI:CA2 2:THI:CB1 2:THI:CB2 2:THI:HC1 2:THI:HC2
                                </beads>
                                <symmetry>3</symmetry>
			<qm>
				<crgunitname>DCV2T</crgunitname>
                                <position>2</position>
                        </qm>
                        </cg_bead>
			<cg_bead>
				<name>THI3</name>
				<type>DCV2T</type>
				<mapping>THI</mapping>
                                <beads>
				3:THI:S1 3:THI:CA1 3:THI:CA2 3:THI:CB1 3:THI:CB2 3:THI:HC1 3:THI:HC2
                                </beads>
                                <symmetry>3</symmetry>
			<qm>
				<crgunitname>DCV2T</crgunitname>
                                <position>3</position>
                        </qm>
                        </cg_bead>
			<cg_bead>
				<name>NIT4</name>
				<type>DCV2T</type>
				<mapping>NIT</mapping>
                                <beads>
				4:NIT:N1 4:NIT:CN1 4:NIT:N2 4:NIT:CN2 4:NIT:CC1 4:NIT:C1 4:NIT:HN1
				</beads>
                                <symmetry>3</symmetry>
			<qm>
				<crgunitname>DCV2T</crgunitname>
                                <position>4</position>
                        </qm>
                        </cg_bead>
		</cg_beads>
	</topology>
	<maps>
		<map>
			<name>NIT</name> <!-- name of the CG map -->
			<weights> <!-- weights - here CoM of the bead is used -->
				14 12 14 12 12 12 1
			</weights>
		</map>
		<map>
                        <name>THI</name>
                        <weights>
				32 12 12 12 12 1 1
                        </weights>
                </map>
	</maps>
</cg_molecule>
